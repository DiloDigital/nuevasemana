			a(href="#").btn_suscribe Suscribete

		section.impresa-box
			h2.titulo Ediciones Impresas
			.gallery-curso
				-for(var i=0; i<4; i++)
					.curso-item
						img(src="img/imagen2.jpg", alt="")
			.busqueda 
				.entrada1
					input(type="text", name="name_ano", autofocus, placeholder="Año", required)
