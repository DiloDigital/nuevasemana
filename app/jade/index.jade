				-for(var i=0; i<3; i++)
					.suscribe-item
						img(src="img/imagen3.jpg", alt="")
			
			a(href="#").btn_suscribe Suscribete

		section.contacto-box
				
			.contenedor 
				.contact__left
					img(src="img/logo-nuevasemana.png", alt="")

					p LA NUEVA SEMANA, INC.  
					p PO BOX 2344 Paletine, IL 60078 
					p Telefono (847) 239-4815
					p Fax (847) 890-6327 
					p info@lanuevasemana.com
				.contact__form
					.contact__information
						h2.titulo1 Contáctanos
						p.titulo2 Queremos escuchar lo que tienes que decir
