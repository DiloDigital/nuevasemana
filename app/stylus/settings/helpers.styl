// color Background

.bg
    &--blanco
        background-color blanco
    &--negro
        background-color negro
    &--gris-medium
        background-color gris_medium
    &--gris-dark
        background-color gris_dark
    &--verde
        background-color verde
    &--verde-dark
        background-color verde_dark
    &--purpura
        background-color purpura

// alineaciones

.text
  
    &--center
        text-align center
    &--left
        text-align left
    &--right
        text-align right
    &--blanco
        color blanco
    &--magenta
        color magenta
    &--amarillo
        color amarillo
    &--verde
        color verde
    &--gris-light
        color gris_light
    &--gris-medium
        color gris_medium
    &--gris-dark
        color gris_dark
    &--inline
        display inline
    &--important
        font-size 1.5em
        font-weight bold
    &--p1
        font-size 1.4em
    &--p2
        font-size 1.3em
    &--p3
        font-size 2em
        line-height 1.4em
        
             
.title
  //font-family lobster
  //font-weight bold
  //margin 20px 0px
  &--main
    line-height 1.1em
    font-size 2.2em
    display inline
    font-weight 500
    
  &--sub2
    font-size 2.4em
    
  &--sub3
