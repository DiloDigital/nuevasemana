body
	margin 0
	padding 0
	font-family sans-serif
	min-height 100vh
	
		
nav
	display flex
	justify-content space-between
	.logo
		//padding 10px
	.btn.menu_mobile
		display none
	.main_nav-cont
		ul
			padding-left 0
			li
				
				list-style none
				a
					//padding 20px
					margin 0 1em
					text-decoration none
					color black
header
	background #1976D2
	h1
		color green
	p	
		color #1f5f85
		font-size 16px	

a.btn_suscribe
	display inline-block
	text-decoration none
	text-align center
	color white
	background #f6c31b
	box-shadow 3px 3px 7px black
	padding 5px 20px
	border-radius 5px				



.noticias-box
	text-align center
	h2.titulo 
		font-size 40px	
		font-weight bold
	.gallery-container
		display flex
		flex-wrap wrap
		padding 0 4%
		+above(b2)
			padding 0 6%
		+above(b3)
			padding 0 6%
		+above(b4)
			padding 0 6%
	
	.gallery-item
		width calc(100% - 2em)
		+above(b1)
			width calc(50% - 2em)
		+above(b2)
			width calc(25% - 2em)

		margin 1em
		img
			width 100%
					
.impresa-box
	text-align center
	h2.titulo
		font-size 20px
		font-weight bold
	.gallery-curso
		display flex
		flex-wrap wrap
		padding 0 4%
		+above(b2)
			padding 0 6%
		+above(b3)
			padding 0 6%
		+above(b4)
			padding 0 6%
	
	.curso-item
		width calc(100% - 2em)
		
		+above(b1)
			width calc(50% - 2em)
		+above(b2)
			width calc(25% - 2em)

		margin 1em
		img
			width 100%

	

.busqueda		
	display flex
	flex-wrap wrap	
	justify-content center
	padding 0 5%
	+above(b2)
		padding 0 7%
	.entrada1				
		display flex
		justify-content center
		//text-align center			
		border-radius 5px 5px 5px 5px
		margin 10px 8px
		input
			background none
			border-radius 5px 5px 5px 5px

.descarga
	margin 10px 0
	+above(b2)
		padding 0 7% 
	a
		display inline-block
		text-decoration none				
		color white				
		background #f6c31b
		box-shadow: 3px 3px 7px black
		padding 10px 50px
		border-radius 5px 5px 5px 5px  	
							



.suscribe-box
	text-align center
	background white
	h2.titulo	
		font-size 20px
		font-weight bold
	.suscribe-gallery
		display flex
		flex-wrap wrap
		justify-content center
		padding 0 4%
		+above(b2)
			padding 0 6%
		+above(b3)
			padding 0 6%
		+above(b4)
			padding 0 6%
		
	.suscribe-item
		width calc(80% - 2em)
		
		+above(b1)
			width calc(40% - 2em)
			margin 2em
		+above(b2)
			width calc(30% - 2em)

		margin 1em
		img
			width 100%
			
			border solid 6px #2994da
			border-radius 50%
			
			
		
