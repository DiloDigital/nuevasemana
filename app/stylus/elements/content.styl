body
	margin 0 auto
	padding 0
	font-family sans-serif
	font-size 16px
	font-size 1rem
	min-height 100vh
	h1, h2, h3
		margin-top 0
	
header.header
	padding 1em 7%
	+above(b2)
		display flex
		justify-content space-between
	.logo
		display  flex
		justify-content space-between
		img
			width 100%
			height auto
			max-width 240px
		.toggle-menu
			align-self center
			color grey_dark
			font-size 2em
			+above(b2)
				display none
	
	nav.main-nav
		align-self flex-end
		.main-nav__cont
			display none
			+above(b2)
				display flex!important
			ul.main-nav__list
					
				li.main-nav__item
					display flex
					flex-direction column
					+above(b2)
						flex-direction row
					a.main-nav__link
						padding 0 0.8em
						text-decoration none
						color grey_dark
						&:hover
							background rgba(0, 0, 0, .3)


//**********
// MAIN
//**********


section.banner
	p	
		margin-bottom 2em

section.noticias
					
section.ediciones
	.sort
		label
			display none
		.collection-sort
			select
				background none 
				border 1px solid white
				border-radius 8px
				width 100%
				padding 0.5em 0
			
section.suscribe
	.suscribe__box
		justify-content center
		.suscribe__item
			img
				border solid 6px blue_light
				border-radius 50%
				width calc(100% - 12px) 

section.contact
	+above(b1)
		flex-direction column
	.contact__left
		p
			margin 0.5em 0
		img
			padding 1em 0
			width 90%
			max-width 280px
		+above(b2)
			text-align left
			width calc(100% * 1 / 3 - 0.5em)
	
	.contact__form
		+above(b2)
			width calc(100% * 2 / 3 - 4em)
		.contact__information
			text-align center
			h2
				display inline
		.contact__formulario
			width auto
							
footer
	display block
	padding 20px
	
//********
//Helpers
//********

	
[class*=grid-]
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	& > *
		width calc(100% * 1 / 1 - 2em - 0.1px)
		margin 0.7em
		
+above(b1)
	[class*="grid-2"]
		& > *
			width calc(100% * 1 / 2 - 2em - .01px)
	[class*="grid-1_1"]
		& > *
			width calc(100% * 1 / 1 - 2em - .01px)

+above(b2)
	[class*="-medium-4"]
		& > *
			width calc(100% * 1 / 4 - 2em - .01px)
	[class*="-medium-3"]
		& > *
			width calc(100% * 1 / 3 - 4em - .01px)
			margin 1.5em
			
	[class*="-medium-2"]
		& > *
			width calc(100% * 1 / 2 - 2em - .01px)
	
.box
	padding 4rem 2%
.box-min
	padding 4rem 2%
	
+above(b2)
	.box
		padding 4rem 7%
	.box-min
		padding 4rem 7%

+above(b3)
	.box-min
		padding 4rem 10%