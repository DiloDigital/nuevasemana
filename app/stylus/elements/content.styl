body
	margin 0 auto
	padding 0
	font-family sans-serif
	font-size 16px
	font-size 1rem
	min-height 100vh
	h1, h2, h3
		margin-top 0
	

//***********
// HEADER
//***********
	
nav.main-nav
	display flex
	justify-content space-between
	padding-top 2.5em
	padding-bottom 2em
	padding 0 7%
	
	.logo
		img
			width 75%
			height auto
	.btn_menu-mobile
		display none
	.main-nav__cont
		align-self flex-end
		.main-nav__list
			padding 0
			margin 0
			display flex
			align-self flex-end
			.main-nav__item
				list-style none
				a.main-nav__link
					padding 0 0.8em
					text-decoration none
					color grey_dark
header
	.header
		p	
			margin-bottom 2em
		

a.btn_suscribe
	display inline-block
	text-decoration none
	text-align center
	color white
	background #f6c31b
	box-shadow 3px 3px 7px black
	padding 10px 50px
	border-radius 10px				
	font-size 1.8em
	font-weight bold

//**********
// MAIN
//**********

section.noticias
	
					
section.ediciones
	
.sort
	label
		display none
	.collection-sort
		select
			border-radius 10px
			width 100%
			padding 0.5em 0
			
	.descarga
		a
			width 100%
			margin auto
			text-align center
			font-weight bold
			font-size 1.5rem
			display block
			text-decoration none				
			color white				
			background #f6c31b
			padding 0.16em 0
			border-radius 10px


								
section.suscribe
	.suscribe__box
		justify-content center
	.suscribe__item
		img
			border solid 6px #2994da
			border-radius 50%
			width calc(100% - 12px) 

		
section.contact
	+above(b1)
		flex-direction column
	.contact__left
		p
			line-height 0
			margin 1.3em 0
		img
			width 90%
			max-width 280px
		+above(b2)
			text-align left
			
	
	.contact__form
		.contact__information
			text-align center
			h2
				display inline
		.contact__formulario
			background yellow 
							
				
footer
	display block
	padding 20px
	
//********
//WIDTH
//********

	
[class*=grid-]
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content space-between
	& > *
		
		width calc(100% * 1 / 1 - 2em - 0.1px)
		background yellow
		margin 0.7em
		
+above(b1)
	[class*="grid-2"]
		& > *
			width calc(100% * 1 / 2 - 2em - .01px)
			background blue
	[class*="grid-1_1"]
		& > *
			width calc(100% * 1 / 1 - 2em - .01px)
			background blue

+above(b2)
	[class*="-medium-4"]
		& > *
			width calc(100% * 1 / 4 - 2em - .01px)
			background verde
	[class*="-medium-3"]
		& > *
			width calc(100% * 1 / 3 - 2em - .01px)
			background verde
	[class*="-medium-2"]
		& > *
			width calc(100% * 1 / 2 - 2em - .01px)
			background red
	
.box
	padding 4rem 2%
.box-mini
	padding 4rem 2%
	
+above(b2)
	.box
		padding 4rem 7%
	.box-mini
		padding 4rem 15%