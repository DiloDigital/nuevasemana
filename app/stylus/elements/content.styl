body
	margin 0 auto
	padding 0
	font-family sans-serif
	//min-height 100vh
	background url(img/wireframe1280.jpg) green
	
nav.main-nav
	display flex
	justify-content space-between
	padding-top 2.5em
	padding-bottom 2em
	
	.logo
		img
			width 75%
			height auto
	.btn_menu-mobile
		display none
	.main-nav__cont
		align-self flex-end
		.main-nav__list
			padding 0
			margin 0
			//padding-left 0
			display flex
			align-self flex-end
			.main-nav__item
				list-style none
				//margin 0 2.5em 
				a.main-nav__link
					padding 0 0.8em
					//margin 0 1em
					text-decoration none
					color black
					font-size 1.4em
header.header
	//background #1976D2
	padding-top 2em
	padding-bottom 4em
	background-color rgba(blanco,0.7)
	
	h1
		color green
	p	
		color #1f5f85
		font-size 16px
		margin-bottom 2em
		

a.btn_suscribe
	display inline-block
	text-decoration none
	text-align center
	color white
	background #f6c31b
	box-shadow 3px 3px 7px black
	padding 10px 50px
	border-radius 10px				
	font-size 1.8em
	font-weight bold



section.noticias
	padding-top 1em
	padding-bottom 3em
	text-align center
	h2.titulo 
		font-size 3.1em
		font-weight bold

.noticias__box
	display flex
	flex-wrap wrap
	justify-content center
	//padding 0 4%
	margin-bottom 3.5em
	+above(b2)
		padding 0 6%
	
	.noticias__item
		width calc(100% - 2em)
		+above(b1)
			width calc(50% - 2em)
		+above(b2)
			width calc(25% - 2.8em)

		margin 0.7em
		img
			width 100%
					
section.ediciones
	padding-top 4em
	padding-bottom 6em
	background rgba(verde, 0.6)
	//background #022233
	
	text-align center
	h2.titulo
		font-size 3em
		font-weight bold
.ediciones__box
	display flex
	flex-wrap wrap
	justify-content center
	padding 0 4%
	margin-bottom 7.5em
	+above(b2)
		padding 0 6%
		
	.ediciones__item
		
		width calc(100% - 2em)
		
		+above(b1)
			width calc(50% - 2em)
		+above(b2)
			width calc(25% - 2.8em)
			

		margin 0.7em
		img
			width 100%
			

.busqueda		
	display flex
	justify-content space-between
	//+above(b2)
	padding 0 10%
	.entrada			
		border-radius 5px
		//margin 0 0.1em
		input
			width 87%
			background none
			border-radius 10px
			font-size 1.2em
			padding 20px 0px 2px 10px
			//padding 0.4em 0

	.descarga
		align-self center
		border 2px solid #000
		//margin 0 0.5em
		+above(b2)
			//padding 0 7% 
		a
			text-decoration none				
			color white				
			background #f6c31b
			//box-shadow: 3px 3px 7px black
			padding 10px 40px
			border-radius 10px
			font-size 1.8em
			font-weight bold
								
section.suscribe
	//background #fff
	text-align center
	h2.titulo	
		font-size 20px
		font-weight bold
.suscribe__box
	display flex
	flex-wrap wrap
	justify-content center
	padding 0 4%
	+above(b2)
		padding 0 6%
		
	.suscribe__item
		width calc(70% - 2em)
		
		+above(b1)
			width calc(50% - 2em)
		+above(b2)
			width calc(25% - 2em)
			margin 2em

		margin 1em
		img
			width 100%
			border solid 6px #2994da
			border-radius 50%
			
			
		
section.contact
	//background #022233
	.contact__box
		display flex
		flex-direction column
		padding 3.3em 0
		
		+above(b1)
			align-items center
			//padding 0 15%
		+above(b2)
			flex-direction row
			justify-content center
				
		.contact__left
			text-align center
			color white			
			font-size 20px
			margin 0 80px
			
			p
				line-height 0
				margin 1.3em 0
				
			img
				width 90%
			+above(b2)
				text-align left
		
		.contact__form
			.contact__information
				color blanco
				text-align center
				h2
					font-size 2.3em
					font-weight bold
					line-height 0.5
			.contact__formulario
				+above(b1)
					width 430px
				
				
footer
	display block
	text-align center
	background #308fcb	
	padding 20px
	p
		font-size 1em
		color white



