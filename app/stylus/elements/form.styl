.form__group label
    display none

.form
    overflow hidden
    width 100%
    &__group
        margin 0.3em 0
    &__control
        display block
        width 100%
        height 20px
        padding 15px 12px
        font-size 0.9em
        color #000
        background-color rgba(white,0.8)
        border 1px solid grey_light
        box-sizing border-box
        &: focus
            border-color #66afe9
            outline 0
        &::-moz-placeholder
            color #999
            opacity 1
    &__submit
        display block
        text-decoration none
        color white             
        text-align center
        font-size 1.5em
        font-weight bold
        

textarea.form__control
    max-width 100%
    height 150px
    max-height 150px

input[type="submit"]
    width 100%
    background yellow
    padding 0.4em 0 
    border-radius 10px